<%- include('include/header')%>

    <main class="container">
        <%- include('include/navbar')%>
            <form class="create-post-form" method="POST" enctype="multipart/form-data">
                
                <h3>Create an account now.</h3>
                <small>just fill the fields for create your account</small>

                <%- include('include/message')%>
                <section class="wrap-form-sign">
                    <div>
                        <label class="new-input-label" for="cpf">
                            <input class="new-input" type="text" name="cpf" autocomplete="off" required>
                            <p>cpf</p>
                        </label>
        
                        <label class="new-input-label" >
                            <input class="new-input" type="text" name="name" autocomplete="off" required >
                            <p>name</p>
                        </label>
                        <label class="new-input-label">
                            <input class="new-input" type="text" name="email" required autocomplete="off">
                            <p>email</p>
                        </label>
                    </div>

                    <div class="input-avatar">
                        <img src="../../assets/img/avatar-male.jpg" alt="avatar-profile">
                        <input type="file" name="photo">
                    </div>
                </section>
                <label class="new-input-label">
                    <input class="new-input" type="password" name="password" autocomplete="off" required>
                    <p>password</p>
                </label>
                
                <label class="new-input-label">
                    <input class="new-input" type="password" name="password-repeat" autocomplete="off" required>
                    <p>repeat password</p>
                </label>

