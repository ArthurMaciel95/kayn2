<%- include('include/header')%> <%- include('include/navbar')%>

<main class="container">
    <form
        class="create-post-form"
        method="POST"
        class="form-page-post"
        enctype="multipart/form-data"
    >
        <label class="new-input-label" for="photo">
            <input
                class="new-input"
                type="file"
                name="photo"
                autocomplete="off"
            />
        </label>
        <% if(obj.edit.photo) {%>
        <img
            class="photo-post"
            src="../../upload/<%= obj.edit.photo %>"
            alt="<%= obj.edit.photo %>"
        />

        <%} else {%>
        <p>don't have photo in post</p>
        <%}%>

        <label class="new-input-label" for="title">
            <input
                class="new-input"
                type="text"
                name="title"
                autocomplete="off"
                value="<%= obj.edit.title%>"
            />
            <p>Title</p>
        </label>
        <label class="new-input-label" for="subtitle">
            <input
                class="new-input"
                type="text"
                name="subtitle"
                autocomplete="off"
                value="<%= obj.edit.subtitle%>"
            />
            <p>Subtitle</p>
        </label>

        <label for="message">Message:</label>
        <textarea spellckeck="true" name="body" rows="7">
<%= obj.edit.body%></textarea
        >
        <div class="wrap-form">
            <div class="break-line-tags">
                <label class="new-input-label" for="tags">
                    <input
                        class="new-input"
                        type="text"
                        name="tags"
                        autocomplete="off"
                        value="<%= obj.edit.tags%>"
                    />
                    <p>Tags</p>
                </label>

                <small>use the "," to make more tags</small>
            </div>

            <select name="category" id="" sele>
                <option value="Front-end">Front-end</option>
                <option value="Back-end">Back-end</option>
                <option value="Desing">Desing</option>
                <option value="DevOps">DevOps</option>
                <option value="General">General</option>
                <option value="Project Management">Project Management</option>
                <option value="Desing">Desing</option>
                <option value="Marketing">Marketing</option>
                <option value="Mobile">Mobile</option>
                <option value="Human Resources">Human Resources</option>
            </select>
        </div>

        <button type="submit">enviar</button>
    </form>
</main>

<%- include('include/script/_button-disabled')%> <%- include('include/footer')%>
